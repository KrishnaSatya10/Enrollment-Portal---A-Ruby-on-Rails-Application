<h1>My Profile</h1>
<br>
<div class="container">
  <div class="row">
    <div class="col">
      <strong>Instructor ID</strong>
    </div>
    <div class="col-9">
      <%= @instructor.id %><br>
    </div>
  
  </div>
  <div class="row">
    <div class="col">
      <strong>Name</strong>
    </div>
    <div class="col-9">
      <%= @instructor.user.name %>
