  </div>

  <div class="row">
    <div class="col">
      <strong>Email</strong>
    </div>
    <div class="col-9">
      <%= @instructor.user.email %>
    </div>
    
  </div>

  <div class="row">
    <div class="col">
      <strong>Department</strong>
    </div>
    <div class="col-9">
      <%= @instructor.department %>
    </div>
    
  </div>
</div>
