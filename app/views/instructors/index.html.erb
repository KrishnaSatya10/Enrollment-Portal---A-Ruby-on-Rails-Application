<p id="notice"><%= notice %></p>

<h1>Instructors</h1>
<%= link_to 'New Instructor', new_instructor_path , class: 'btn btn-primary' %>
<%= link_to 'Back', home_index_path , class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.user.name %></td>
        <td><%= instructor.user.email %></td>
        <td><%= instructor.department %></td>
        <td><%= link_to 'Show', instructor , class: 'btn btn-primary btn-sm'%></td>
        <td><%= link_to 'Edit', edit_instructor_path(instructor) , class: 'btn btn-primary btn-sm'%></td>
        <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


