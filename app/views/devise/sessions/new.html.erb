

<div class = "wrapper">
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html:  {class: "form-signin"})  do |f| %>
<h1 class="form-signin-heading">Sign In</h1>
  <div class="field">

    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"form-control",placeholder:"Email Address" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password" ,class:"form-control", placeholder:"Password"%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: "form-check-input mb-3"%>
      <%= f.label :remember_me%>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class: "btn btn-primary"%>
  </div>

  <%= render "devise/shared/links" %>
<% end %>

</div>
